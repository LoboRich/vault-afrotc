.app-content
  .content-wrapper
    .container
      .card
        .card-header
          %div.d-flex.align-items-center.gap-3
            %h4.card-title
              = @event.name
            %span.badge.rounded-pill.bg-primary
              = @event.event_type.titleize
        .card-body
          .row.g-4

            .col-md-6
              %label.form-label.text-muted Event Date
              %p.mb-0
                = @event.event_date.strftime("%B %d, %Y %I:%M %p")

            .col-md-6
              %label.form-label.text-muted Location
              %p.mb-0= @event.location

            .col-12
              %label.form-label.text-muted Description
              .p-3.bg-light.rounded
                = @event.description

        .card-footer.text-end
          = link_to 'Back', events_path, class: "btn btn-light me-2"
          = link_to 'Edit', edit_event_path(@event), class: "btn btn-warning px-4"

%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :surname
    %br/
    = f.text_field :surname
  .field
    = f.label :role
    %br/
    = f.select :role, options_for_select([['admin', 'admin'], ['staff', 'staff'], ['cashier', 'cashier']])
  .field
    = f.label :status, "Status"
    %br/
    .flex.items-center.mt-2
      = f.radio_button :status, true, id: 'active', class: 'form-radio'
      = f.label :status_active, "Active", for: 'active', class: 'ml-2 text-gray-700'
      %br/
      = f.radio_button :status, false, id: 'inactive', class: 'form-radio'
      = f.label :status_inactive, "Inactive", for: 'inactive', class: 'ml-2 text-gray-700'
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

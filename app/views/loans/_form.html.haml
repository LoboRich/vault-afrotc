= form_for @loan do |f|
  - if @loan.errors.any?
    #error_explanation
      %h2= "#{pluralize(@loan.errors.count, "error")} prohibited this loan from being saved:"
      %ul
        - @loan.errors.full_messages.each do |message|
          %li= message
  .card-body.pb-0
    .row
      .form-group.col-12.pt-2
        .form-row
          .col-md-6.pt-3
            .field
              = f.label :client
              = f.text_field :client, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :blocklot
              = f.text_field :blocklot, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :terms
              = f.number_field :terms, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :model_house
              = f.text_field :model_house, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :loan_financing
              = f.text_field :loan_financing, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :contract_price
              = f.text_field :contract_price, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :processing_fees
              = f.text_field :processing_fees, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :downpayment
              = f.text_field :downpayment, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :interest
              = f.text_field :interest, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :principal
              = f.text_field :principal, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :monthly_amort
              = f.text_field :monthly_amort, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :contract_date
              = f.date_field :contract_date, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :amortization_start_date
              = f.date_field :amortization_start_date, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :balance
              = f.text_field :balance, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :remarks
              = f.text_area :remarks, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :status
              = f.text_field :status, class: 'form-control', required:  true
          .col-md-6.pt-3
            .field
              = f.label :broker
              = f.text_field :broker, class: 'form-control', required:  true
        .card-footer
    = link_to 'Back', loans_path, class: 'btn btn-secondary'
    = f.submit 'Save Changes', class: 'btn btn-warning float-right'

= form_for @subdivision do |f|
  - if @subdivision.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subdivision.errors.count, "error")} prohibited this subdivision from being saved:"
      %ul
        - @subdivision.errors.full_messages.each do |message|
          %li= message
  .row.m-t-sm
    .col-md-6
      = f.label :name, :class => "form-label"
      = f.text_field :name, class: 'form-control', required:  true
    .col-md-6
      = f.label :short_code, :class => "form-label"
      = f.text_field :short_code, class: 'form-control', required:  true
  .row.m-t-sm
    .col-md-6
      = f.label :location, :class => "form-label"
      = f.text_field :location, class: 'form-control', required:  true
    .col-md-6
      = f.label :status, :class => "form-label"
      = f.text_field :status, class: 'form-control', required:  true
  .mt-4
    = link_to 'Back', subdivisions_path, class: 'btn btn-dark'
    = f.submit 'Save Changes', class: 'btn btn-primary float-right'

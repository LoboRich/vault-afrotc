  .app-container
    .search
      %form
        %input.form-control{"aria-label" => "Search", :placeholder => "Type here...", :type => "text"}/
      %a.toggle-search{:href => "#"}
        %i.material-icons close
    .app-header
      %nav.navbar.navbar-light.navbar-expand-lg.bg-primary
        .container-fluid
          #navbarNav.navbar-nav
          .d-flex
            %ul.navbar-nav
              %li.nav-item.hidden-on-mobile.text-white.d-flex.align-items-center
                - if user_signed_in?
                  Hello,
                  = succeed "." do
                    %strong= current_user.name
                  = link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link"
                - else
                  = link_to "Login", new_user_session_path, class: "nav-link"

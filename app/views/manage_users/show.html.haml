
.app.align-content-stretch.d-flex.flex-wrap
  .app-sidebar
    = render "layouts/sidebar"
  .app-container
    .app-content
      .content-wrapper
        .container
          .page-description.d-flex.align-items-center
            .page-description-content.flex-grow-1
              %h1 User Information
          .row
            .card
              .card-body
                .mb-4
                  %strong.text-gray-700 Role:
                  %span.ml-2= @user.role
                .mb-4
                  %strong.text-gray-700 Name:
                  %span.ml-2.text-xl.font-semibold= @user.name
                .mb-4
                  %strong.text-gray-700 Email:
                  %span.ml-2.text-blue-500= @user.email
                .mb-4
                  %strong.text-gray-700 Status:
                  %span.ml-2.text-blue-500= @user.status
                .flex.mt-6
                  = link_to 'Back', manage_users_path, class: 'bg-gray-500 py-2 px-4 rounded hover:bg-gray-600'
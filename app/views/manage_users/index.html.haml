.container.mx-auto.p-6
  %h1.text-3xl.font-bold.mb-4 Users List
  %table.min-w-full.bg-white.border.border-gray-300.rounded-lg.shadow-md
    %thead
      %tr.w-full.bg-gray-200.text-gray-600.uppercase.text-sm.leading-normal
        %th.py-3.px-6.text-left ID
        %th.py-3.px-6.text-left Name
        %th.py-3.px-6.text-left Email
        %th.py-3.px-6.text-center Actions
    %tbody.text-gray-700.text-sm.font-light
      - @users.each do |user|
        %tr.border-b.border-gray-300.hover:bg-gray-100
          %td.py-3.px-6.text-left= user.id
          %td.py-3.px-6.text-left= user.name
          %td.py-3.px-6.text-left= user.email
          %td.py-3.px-6.text-center
            = link_to 'Show', manage_user_path(user.id), class: 'text-blue-500 hover:text-blue-700'
  .mt-6
    = link_to 'New User', '/auth/register/new', class: 'bg-blue-500 py-2 px-4 rounded hover:bg-blue-600'
    .p /
    = link_to 'Home', '/', class: 'py-2 px-4 rounded hover:bg-blue-600'
.app.align-content-stretch.d-flex.flex-wrap
  .app-sidebar
    = render "layouts/sidebar"
  .app-container
    .app-content
      .content-wrapper
        .container
          .row
            .card
              .card-header
                %h2 New User
              .card-body
                = form_for 'user', url: ('/manage_users') do |f|
                  .d-flex
                    .col-md-6
                      = f.label :name, :class => "form-label"
                      = f.text_field :name, :class => "form-control"
                    .col-md-6
                      = f.label :surname, :class => "form-label"
                      = f.text_field :surname, :class => "form-control"
                  .d-flex
                    .col-md-6
                      = f.label :role, :class => "form-label"
                      = f.select :role, options_for_select([['CEO', 'ceo'], ['Sales', 'sales'], ['Cashier', 'cashier'], ['Credit & Collection', 'credit-and-collection'], ['Water Reader', 'water-reader']], @user.status), {} , { class: "form-select" }
                    .col-md-6
                      = f.label :email, :class => "form-label"
                      = f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"
                  .d-flex
                    .col-md-6
                      = f.label :password, :class => "form-label"
                      - if @minimum_password_length
                        %em
                          (#{@minimum_password_length} characters minimum)
                      = f.text_field :password, autocomplete: "new-password", :class => "form-control"
                    .col-md-6
                      = f.label :status, "Status", :class => "form-label"
                      .col-md-6
                        = f.radio_button :status, true, id: 'active', class: 'form-check-input'
                        = f.label :status_active, "Active", for: 'active', class: 'form-check-label'
                        = f.radio_button :status, false, id: 'inactive', class: 'form-check-input'
                        = f.label :status_inactive, "Inactive", for: 'inactive', class: 'form-check-label'
                  .col-md-6.mt-2
                    = f.submit "Create User",:class => "btn btn-primary"
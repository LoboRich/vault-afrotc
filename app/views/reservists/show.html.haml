.app-content
  .content-wrapper
    .container
      / ================= HEADER SUMMARY =================
      .card.shadow-sm.mb-4
        .card-body
          .row.align-items-center
            .col-md-8
              %h4.mb-1
                = "#{@reservist.rank} #{@reservist.first_name} #{@reservist.last_name}"
              %p.text-muted.mb-1
                = @reservist.branch_of_service
              %span.badge.badge-primary
                = @reservist.reservist_classification
            .col-md-4.text-md-right
              %p.mb-0
                %strong AFPSN:
                = @reservist.afpsn
              %p.mb-0
                %strong Status:
                - if @reservist.is_active?
                  %span.text-success Active
                - else
                  %span.text-danger Inactive

      / ================= PERSONAL INFO =================
      .card.mb-4
        .card-header.bg-light
          %strong Personal Information
        .card-body
          .row
            .col-md-6
              %p
                %strong Full Name:
                = "#{@reservist.first_name} #{@reservist.middle_name} #{@reservist.last_name}"
              %p
                %strong Date of Birth:
                = @reservist.date_of_birth
              %p
                %strong Age:
                = @reservist.age
              %p
                %strong Sex:
                = @reservist.sex
            .col-md-6
              %p
                %strong Civil Status:
                = @reservist.marital_status
              %p
                %strong Religion:
                = @reservist.religion
              %p
                %strong Blood Type:
                = @reservist.blood_type
              %p
                %strong Dialects:
                = @reservist.dialects_spoken

      / ================= SERVICE INFO =================
      .card.mb-4
        .card-header.bg-light
          %strong Service Information
        .card-body
          .row
            .col-md-6
              %p
                %strong Primary AFSC:
                = @reservist.primary_afsc
              %p
                %strong Duty AFSC:
                = @reservist.duty_afsc
              %p
                %strong Unit Assignment:
                = @reservist.reserve_unit_assignment
            .col-md-6
              %p
                %strong Mobilization Center:
                = @reservist.mobilization_center
              %p
                %strong Present Designation:
                = @reservist.present_designation
              %p
                %strong Unit Capability:
                = @reservist.unit_capability

      / ================= CONTACT INFO =================
      .card.mb-4
        .card-header.bg-light
          %strong Contact Information
        .card-body
          .row
            .col-md-6
              %p
                %strong Email:
                = @reservist.email
              %p
                %strong Mobile:
                = @reservist.mobile_nr
            .col-md-6
              %p
                %strong Address:
                = "#{@reservist.street_address}, #{@reservist.city}, #{@reservist.province}"
              %p
                %strong Region:
                = @reservist.region

      / ================= LOCATION MAP (Optional) =================
      - if @reservist.lat.present? && @reservist.long.present?
        .card.mb-4
          .card-header.bg-light
            %strong Location
          .card-body
            #map{ style: "height: 350px;" }
      .d-flex.align-items-center.mb-4.justify-content-end
        .btn-group
          = link_to 'Back', reservists_path, class: "btn btn-secondary"
          = link_to 'Edit', edit_reservist_path(@reservist), class: "btn btn-warning"
.app-content
  .content-wrapper
    .container
      .card
        .card-header.d-flex
          -# %i.material-icons-two-tone> book
          %h5.card-title
            Reservist List
        .card-body
          .datatable-container
            .table-responsive.datatable-container
              %table#vehicles-table.table.table-striped.table-bordered.table-hover.table-sm.datatable
                %thead.bg-light
                  %tr
                    %th Sq.
                    %th Afpsn
                    %th Rank
                    %th Fullname
                    %th Location
                    %th Mobile Nr
                  %th Action
                %tbody
                  - i = 1
                  - @reservists.each do |reservist|
                    %tr.odd{ role: "row" }
                      %td= i
                      %td= reservist.afpsn
                      %td= reservist.rank
                      %td= reservist.full_name
                      %td= reservist.location
                      %td= reservist.mobile_nr
                      %td
                        .form-button-action.gap-3
                          = link_to "#", title: "Approve", class: "text-success" do
                            %i.material-icons check
                          = link_to reservist, title: "Show it", class: "text-primary" do
                            %i.material-icons visibility


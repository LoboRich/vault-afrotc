.app-content
  .content-wrapper
    .container
      .page-description.d-flex.align-items-center
        %h1.flex-grow-1
          <%= human_name.pluralize %>
        .page-description-actions
          = link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do
            %i.material-icons> add
            New <%= human_name %>

      .card
        .card-body
          #<%= plural_table_name %>table_wrapper.dataTables_wrapper.dt-bootstrap4
            .row
              .col-sm-12.table-responsive
                %table#<%= plural_table_name %>table.display.dataTable{"aria-describedby" => "<%= plural_table_name %>table_info", :role => "grid", :style => "width: 100%;"}
                  %thead
                    %tr
                      <% attributes.each do |attribute| -%>
                        %th <%= attribute.human_name.titleize %>
                      <% end -%>
                      %th Action
                  %tbody
                    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
                      %tr.odd{ role: "row" }
                        <% attributes.each do |attribute| -%>
                          %td= <%= singular_table_name %>.<%= attribute.name %>
                        <% end -%>
                        %td
                          = link_to <%= singular_table_name %>, title: 'Show it', class: 'btn btn-icon btn-sm btn-info mr-1' do
                            %i.material-icons visibility
                          = link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), title: 'Edit it', class: 'btn btn-icon btn-sm btn-warning mr-1' do
                            %i.material-icons edit
                          = link_to <%= singular_table_name %>,
                            data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                            title: 'Destroy it',
                            class: 'btn btn-icon btn-sm btn-danger' do
                            %i.material-icons delete

:javascript
  $(document).ready(function () {
    $('#<%= plural_table_name %>table').DataTable();
  });
